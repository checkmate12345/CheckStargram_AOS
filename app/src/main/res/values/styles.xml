<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 기본 앱 테마 -->
    <style name="Theme.CheckStagram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <!--  Text Font  -->
    <style name="text_big_bold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_medium_bold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_small_bold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_big_regular" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_medium_regular" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_small_regular" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CheckButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="elevation">4dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="SelectorCheckButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/check_button_selector</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@drawable/check_button_text_selector</item>

        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">20dp</item>
        <item name="android:insetRight">20dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>

        <item name="minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="iconPadding">0dp</item>
    </style>

</resources>