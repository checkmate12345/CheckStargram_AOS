<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/view_splash_gradient1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/splash_gradient1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_splash_gradient2"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.2"/>

        <View
            android:id="@+id/view_splash_gradient2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/splash_gradient2"
            app:layout_constraintTop_toBottomOf="@id/view_splash_gradient1"
            app:layout_constraintBottom_toTopOf="@id/view_splash_gradient3"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.2"/>

        <View
            android:id="@+id/view_splash_gradient3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/splash_gradient3"
            app:layout_constraintTop_toBottomOf="@id/view_splash_gradient2"
            app:layout_constraintBottom_toTopOf="@id/view_splash_gradient4"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.2"/>

        <View
            android:id="@+id/view_splash_gradient4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/splash_gradient4"
            app:layout_constraintTop_toBottomOf="@id/view_splash_gradient3"
            app:layout_constraintBottom_toTopOf="@id/view_splash_gradient5"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.2"/>

        <View
            android:id="@+id/view_splash_gradient5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/splash_gradient5"
            app:layout_constraintTop_toBottomOf="@id/view_splash_gradient4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.2"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_splash_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/start_logo"
            android:foreground=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintDimensionRatio="1:1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
